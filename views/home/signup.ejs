<%- include('../partial/header'); %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="css/styles1.css">
    <div class="col-md-8">
        <div class="panel panel-default" id="pa">
            <div class="panel-heading">
                <h3 class="nfs">Sign Up</h3>
            </div>
            <div class="panel-body">
                <form class="form-signin" method="POST" action="/signup" enctype="multipart/form-data">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">@</span>
                        <input type="text" class="form-control" placeholder="Username" name="username" aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">@</span>
                        <input type="email" class="form-control" placeholder="Email address" name="email"
                            aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-phone"></span></span>
                        <input type="number" name="mobile" id="inputContent" class="form-control" placeholder="mobilenumber" aria-describedby="basic-addon1" min="11">
                    </div>
                    <br/>
                    <div class="input-group">
                        <label for="image">avatar</label>
                        <input type="file" name="file" id="file2" class="form-control" accept="image/*">
                    </div>
                    <br/>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock"
                                aria-hidden="true"></span></span>
                        <input type="password" name="password" class="form-control" placeholder="Password" aria-describedby="basic-addon1" minlength="8" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock"
                                aria-hidden="true"></span></span>
                        <input type="password" class="form-control" placeholder="Re-password"
                            aria-describedby="basic-addon1" name="repassword" minlength="8" required>
                    </div>
    
                    <input type="submit" class="btn btn-default navbar-btn btn-primary" value="Sign Up" />
                </form>
            </div>
        </div>
    </div>
    <script src="/JS/email-validation.js"></script>
<%- include('../partial/footer'); %>